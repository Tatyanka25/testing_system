<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">

    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="Register"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <TextView
            style="@style/parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:text="@string/signup_login_hint"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <TextView
        style="@style/viewParent"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserLogin"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:hint="Login"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserPassword"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:hint="@string/login_password_hint"
                android:maxLines="1"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserName"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Name"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Surname"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserSurname"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Surname"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Middle Name"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserMiddleName"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Middle name"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Date of Birth"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserDateOfBirth"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Date of Birth"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserEmail"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Email"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Mobile Number"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserNumber"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Mobile Number"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Secret Question"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserQuestion"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Secret Question"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/viewParent"
            android:layout_marginTop="10dp"
            android:text="Answer for question"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/newsMoreTextSize" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/idEdtuserAnswer"
            style="@style/parent"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                style="@style/modifiedEditText"
                android:inputType="text"
                android:maxLines="1"
                android:hint="Answer for question"/>
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/idBtnRegister"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Register"
            android:backgroundTint="#00A4FE"
            />


    </LinearLayout>
</android.support.v7.widget.CardView>

    </TableLayout>
</ScrollView>